{
  "compilerOptions": {
    "allowJs": true,         // Allow JavaScript files
    "checkJs": false,        // Do not type-check JavaScript files
    "target": "ES2020",         // Target modern JavaScript
    "module": "esnext",         // Use ES modules
    "strict": true,             // Enable strict type-checking
    "jsx": "react-jsx",         // Enable JSX with React 17+ runtime
    "esModuleInterop": true,    // Allow CommonJS imports if needed
    "moduleResolution": "node", // Resolve modules in node_modules
    "outDir": "dist",           // Output directory for compiled code
    "skipLibCheck": true        // Skip type checking for node_modules
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
